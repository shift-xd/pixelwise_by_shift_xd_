    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Hide loading screen after 3 seconds
            setTimeout(function() {
                document.getElementById('loadingScreen').style.opacity = '0';
                setTimeout(function() {
                    document.getElementById('loadingScreen').style.display = 'none';
                }, 1000);
            }, 3000);
            
            // Header scroll effect
            window.addEventListener('scroll', function() {
                const header = document.querySelector('header');
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
            
            // Upload functionality
            const uploadTrigger = document.getElementById('uploadTrigger');
            const fileInput = document.getElementById('fileInput');
            const imagePreview = document.getElementById('imagePreview');
            const appSelection = document.getElementById('appSelection');
            const instructions = document.getElementById('instructions');
            const appCards = document.querySelectorAll('.app-card');
            const styleCards = document.querySelectorAll('.style-card');
            const generateBtn = document.getElementById('generateInstructions');
            const selectedAppEl = document.getElementById('selectedApp');
            const selectedStyleEl = document.getElementById('selectedStyle');
            const analysisLoader = document.getElementById('analysisLoader');
            const successMessage = document.getElementById('successMessage');
            const errorMessage = document.getElementById('errorMessage');
            const aiAnalysisText = document.getElementById('aiAnalysisText');
            const aiGeneratedQuote = document.getElementById('aiGeneratedQuote');
            const instructionSteps = document.getElementById('instructionSteps');
            const toolCredit = document.getElementById('toolCredit');
            
            // OpenRouter API configuration REMOVED for security
            
            // Simulate upload process
            uploadTrigger.addEventListener('click', function() {
                fileInput.click();
            });
            
            // Handle file selection
            fileInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    // Check if file is an image
                    if (!file.type.match('image.*')) {
                        errorMessage.style.display = 'block';
                        successMessage.style.display = 'none';
                        return;
                    }
                    
                    // Show preview
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        imagePreview.src = event.target.result;
                        imagePreview.style.display = 'block';
                        successMessage.style.display = 'block';
                        errorMessage.style.display = 'none';
                        
                        // Show loading for AI analysis
                        analysisLoader.style.display = 'block';
                        
                        // Scroll to app selection with smooth animation
                        setTimeout(() => {
                            appSelection.scrollIntoView({
                                behavior: 'smooth',
                                block: 'center'
                            });
                        }, 500);
                        
                        // Show app selection
                        setTimeout(() => {
                            analysisLoader.style.display = 'none';
                            appSelection.classList.add('active');
                        }, 2000);
                    };
                    reader.readAsDataURL(file);
                }
            });
            
            // App selection
            let selectedApp = 'photoshop';
            let selectedStyle = 'instagram';
            
            appCards.forEach(card => {
                card.addEventListener('click', function() {
                    // Remove selected class from all cards
                    appCards.forEach(c => c.classList.remove('selected'));
                    
                    // Add selected class to clicked card
                    this.classList.add('selected');
                    
                    // Store selected app
                    selectedApp = this.getAttribute('data-app');
                });
            });
            
            // Style selection
            styleCards.forEach(card => {
                card.addEventListener('click', function() {
                    // Remove selected class from all cards
                    styleCards.forEach(c => c.classList.remove('selected'));
                    
                    // Add selected class to clicked card
                    this.classList.add('selected');
                    
                    // Store selected style
                    selectedStyle = this.getAttribute('data-style');
                });
            });
            
            // Generate instructions using mock data (no API call)
            generateBtn.addEventListener('click', function() {
                // Hide app selection
                appSelection.classList.remove('active');
                
                // Show loader
                analysisLoader.style.display = 'block';
                
                // Update selected app and style names
                const appNames = {
                    'photoshop': 'Photoshop',
                    'lightroom': 'Lightroom',
                    'gimp': 'GIMP',
                    'affinity': 'Affinity Photo',
                    'snapseed': 'Snapseed',
                    'vsco': 'VSCO'
                };
                
                const styleNames = {
                    'instagram': 'Instagram Ready',
                    'cinematic': 'Cinematic',
                    'vintage': 'Vintage',
                    'bw': 'Black & White',
                    'ai': 'AI Recommended',
                    'custom': 'Custom Style'
                };
                
                selectedAppEl.textContent = appNames[selectedApp];
                selectedStyleEl.textContent = styleNames[selectedStyle];
                
                // Simulate API delay
                setTimeout(() => {
                    // Mock AI response data
                    const mockResponses = {
                        'photoshop': {
                            analysis: "This landscape photo shows a beautiful mountain range at sunset. The composition is balanced with good exposure, but the colors could be enhanced to make the scene more vibrant. The sky is slightly overexposed, and the foreground lacks contrast.",
                            quote: '"The golden hour lighting creates a warm atmosphere that can be enhanced with selective color adjustments."',
                            steps: [
                                "Open your image in Photoshop and create a duplicate layer (Ctrl+J or Cmd+J) to preserve the original.",
                                "Go to Image > Adjustments > Levels. Adjust the input levels to enhance contrast: set shadows to 15, midtones to 1.10, and highlights to 240.",
                                "Add a Vibrance adjustment layer. Increase Vibrance to +25 and Saturation to +10 to make colors pop without oversaturating skin tones.",
                                "Create a new Curves adjustment layer. Apply a gentle S-curve to increase contrast. Focus on maintaining detail in both shadows and highlights.",
                                "Use the Dodge Tool (O) set to Midtones at 15% exposure to brighten the mountain peaks. Use the Burn Tool set to Shadows at 10% to deepen the foreground.",
                                "Apply a Color Balance adjustment layer. For Midtones, add +10 Red and +5 Yellow. For Highlights, add +5 Cyan and +5 Blue to enhance the sky.",
                                "Add sharpening by going to Filter > Sharpen > Unsharp Mask. Set Amount to 80%, Radius to 1.5 pixels, and Threshold to 3 levels.",
                                "Finally, resize the image for Instagram: Go to Image > Image Size, set width to 1080px and resolution to 72ppi. Save as JPEG with quality 90."
                            ]
                        },
                        'lightroom': {
                            analysis: "This portrait has good composition but could benefit from enhanced skin tones and background separation. The lighting is soft but slightly flat.",
                            quote: '"Soft, natural lighting provides an excellent base for creating a warm, inviting portrait."',
                            steps: [
                                "Import your image into Lightroom and navigate to the Develop module.",
                                "In the Basic panel, set Exposure to +0.30, Contrast to +15, Highlights to -20, Shadows to +25, Whites to +10, and Blacks to -10.",
                                "Increase Clarity to +10 for midtone contrast. Set Vibrance to +15 and Saturation to +5.",
                                "In the Tone Curve panel, create a subtle S-curve: raise the highlights slightly and lower the shadows for added contrast.",
                                "Go to the HSL panel. In the Luminance tab, increase Orange to +20 (for skin) and Blue to +15 (for background elements).",
                                "In the Color Grading panel, set Midtones to a warm orange (Hue 35, Saturation 15). Add a subtle teal tint to Shadows (Hue 195, Saturation 10).",
                                "Apply selective adjustments: Use the Radial Filter to create an oval over the face, increase Exposure by +0.20 and Clarity by +5. Invert the mask and decrease Exposure by -0.30 outside the oval.",
                                "Add sharpening: Amount 70, Radius 1.0, Detail 35. Apply Noise Reduction: Luminance 20, Detail 50.",
                                "Export as JPEG with dimensions 1080px on the long edge, quality 85, and sRGB color profile."
                            ]
                        },
                        'snapseed': {
                            analysis: "This urban street photo has interesting geometry but needs color correction and perspective adjustment.",
                            quote: '"The strong lines and architectural elements create a dynamic composition that can be enhanced with perspective correction."',
                            steps: [
                                "Open your image in Snapseed and tap Tools > Tune Image. Increase Brightness +15, Contrast +20, Saturation +25, and Ambiance +30.",
                                "Tap Tools > Details. Increase Structure +30 and Sharpening +20 to enhance textures.",
                                "Use the Perspective tool to correct vertical lines. Select the Vertical mode and adjust until buildings appear straight.",
                                "Apply selective adjustments: Tap Tools > Brush. Select Saturation brush and paint over colorful elements (signs, clothing) at +10 saturation.",
                                "Add a vignette: Tools > Vignette. Set Outer Brightness to -30 and Inner Brightness to +10. Size to +50.",
                                "Apply a filter: Tools > Curves. Select the Blue channel and create a slight S-curve for cooler shadows and warmer highlights.",
                                "Add grain for film effect: Tools > Grainy Film. Select XGrainy II preset and set Style Strength to 40, Grain to +25.",
                                "Finalize with the Looks filter: Choose the Pop filter at +30 strength.",
                                "Save your edited image by tapping Export > Save."
                            ]
                        }
                    };
                    
                    // Use default response if specific one doesn't exist
                    const response = mockResponses[selectedApp] || mockResponses['photoshop'];
                    
                    // Update AI analysis section
                    aiAnalysisText.textContent = response.analysis;
                    aiGeneratedQuote.textContent = response.quote;
                    
                    // Create instruction steps
                    instructionSteps.innerHTML = '';
                    response.steps.forEach((step, index) => {
                        const stepElement = document.createElement('div');
                        stepElement.className = 'instruction-step';
                        stepElement.innerHTML = `
                            <div class="step-index">${index + 1}</div>
                            <div class="step-content">
                                <p>${step}</p>
                            </div>
                        `;
                        instructionSteps.appendChild(stepElement);
                    });
                    
                    // Update tool credit
                    toolCredit.textContent = "Tool created by Hardrik Thomas Shaji";
                    
                    // Show instructions
                    instructions.classList.add('active');
                    
                    // Scroll to instructions with smooth animation
                    setTimeout(() => {
                        instructions.scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                    }, 500);
                    
                    // Hide loader
                    analysisLoader.style.display = 'none';
                    
                }, 2000); // Simulate 2-second AI processing time
            });
            
            // Smooth scrolling for navigation
            document.querySelectorAll('nav a, .cta-button').forEach(anchor => {
                if (anchor.getAttribute('href').startsWith('#')) {
                    anchor.addEventListener('click', function(e) {
                        e.preventDefault();
                        
                        const targetId = this.getAttribute('href');
                        const targetElement = document.querySelector(targetId);
                        
                        targetElement.scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                    });
                }
            });
        });
    </script>
